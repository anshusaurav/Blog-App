<%- include('partials/header') -%>
<% if(articles.length) { %>
<h1>All Articles</h1>
<div class='article-list-grid'>
<% articles.forEach(elem => { %>
    <div class='single'>
        <a href="/articles/<%= elem.id %>/"><h2 class='single-heading'><%= elem.title%></h2></a>
        <h4>By: <%= elem.author%></h4>
        <div class='tags-grid'>
            <% elem.tags.forEach(element => { %>
                <div class="tag-elem-div">
                    <a href="/tags/<%= element %>"class="tag-elem"> <%= element%></a>
                </div>
            <% }); %>
        </div>
    </div>
    <% })%>
</div>
<% } else { %>
 <h1>No article for now. Come back later</h1>
<% } %> 
    <div class="grid-col-3">
        <a href='/'><i title="Back" class="fas fa-backward"></i></a>
    </div>
<%- include('partials/footer') -%>