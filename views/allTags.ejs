<%- include('partials/header') -%>
<% if(tags.length) { %>
<h1>Get smarter about what matters to you.</h1>
    <div class='tags-grid'>
        <% tags.forEach(element => { %>
            <div class="tag-elem-div">
                <a href="/tags/<%= element.tagname %>" class="tag-elem"> <%= element.tagname%></a>
            </div>
        <% }); %>
    </div>
    <h2>Select what you're into. We'll help you find great things to read.</h2>
<% } else { %>
 <h1>No tags for now. Come back later</h1>
<% } %> 
    <div class="grid-col-3">
        <a href='/'><i title="Back" class="fas fa-backward"></i></a>
    </div>
<%- include('partials/footer') -%>