<%- include('partials/header') -%>
    <h1>Add Article</h1>
    <form class="add-article" action="/articles" method="POST">
        <div class="add-elem-div">
            <input class="title-article" type="text" name="title" placeholder="Title" required>
        </div>
        <div class="add-elem-div">
            <input class="author-article" type="text" name="author" placeholder="Author's Name" required>
        </div>
        <div class="add-elem-div">
            <textarea name="description" rows="4" cols="50" placeholder="Description" required></textarea>
        </div>
        <div class="add-elem-div">
            <input class="tags-article" type="text" name="tags" placeholder="TAGS (like HTML, CSS, Javascript)">
        </div>
        <div class="add-elem-div"> 
            <input type="submit" value="Publish">
            <a class="button clear-anchor" >Clear</a>
        </div>
    </form>
    <div class="grid-col-3">
        <a href='/'><i title="Back" class="fas fa-backward"></i></a>
    </div>
<%- include('partials/footer') -%>